<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifiedNumber"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/returnPag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="290dp"
        android:background="@drawable/welcomepage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrowback" />

    <TextView
        android:id="@+id/buttons_sma"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="120dp"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:lineHeight="52sp"
        android:lineSpacingExtra="4sp"
        android:text="Verify Code"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:translationY="1.8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/body_text"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/intermedium"
        android:gravity="top"
        android:lineHeight="25sp"
        android:lineSpacingExtra="4sp"
        android:text="Check your SMS inbox, we have sent you the code"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:translationY="1.75sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/didn_t_not_"
        android:layout_width="155dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="435dp"
        android:layout_marginEnd="200dp"
        android:fontFamily="@font/intermedium"
        android:gravity="top"
        android:letterSpacing="-0.02"
        android:lineHeight="25sp"
        android:lineSpacingExtra="9sp"
        android:text="Didn't received the code?"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:translationY="4.63sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resend"
        android:layout_width="86dp"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="435dp"
        android:layout_marginEnd="133dp"
        android:clickable="true"
        android:fontFamily="@font/intermedium"
        android:gravity="top"
        android:letterSpacing="-0.02"
        android:lineHeight="25sp"
        android:lineSpacingExtra="9sp"
        android:text="Resend Code"
        android:textColor="@color/FirstPageColor"
        android:textSize="13sp"
        android:translationY="4.63sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/buttonContinueVerification"
        android:layout_width="332dp"
        android:layout_height="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="14dp"
        android:backgroundTint="@color/FirstPageColor"
        android:fontFamily="@font/inter"
        android:letterSpacing="-0.02"
        android:text="Continue"
        android:onClick="callNextScreenFromOTP"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/codeFromSms"
        android:layout_width="332dp"
        android:layout_height="73dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="14dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:letterSpacing="0.05"
        android:text=""
        android:textColor="@color/black"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>