<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setUpPage"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/backButtonSetDevice"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/welcomepage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrowback" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="283dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:letterSpacing="-0.05"
        android:lineHeight="52sp"
        android:lineSpacingExtra="16sp"
        android:text="Set up your D.D.P.A.I device"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:translationY="-7.85sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="328dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/interlight"
        android:gravity="top"
        android:letterSpacing="0"
        android:lineHeight="18sp"
        android:text="Set up your device here.first, turn on your bluethooth and search for your smart device to pair it"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deviceNameText"
        android:layout_width="137dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="112dp"
        android:fontFamily="@font/inter"
        android:gravity="center|top"
        android:letterSpacing="-0.03"
        android:lineHeight="25sp"
        android:lineSpacingExtra="8sp"
        android:text="'Interlock name'"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:translationY="-4.03sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="137dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="535dp"
        android:layout_marginEnd="112dp"
        android:fontFamily="@font/intermedium"
        android:gravity="center|top"
        android:letterSpacing="-0.03"
        android:lineHeight="25sp"
        android:lineSpacingExtra="8sp"
        android:text="Interlock device"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:translationY="-4.03sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pairBtn"
        android:layout_width="271dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="571dp"
        android:layout_marginEnd="43dp"
        android:backgroundTint="@color/ButtonColor"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:letterSpacing="0"
        android:lineHeight="22sp"
        android:text="Connect Device"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="271dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="43dp"
        android:backgroundTint="@color/ButtonColor"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:letterSpacing="0"
        android:lineHeight="22sp"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>