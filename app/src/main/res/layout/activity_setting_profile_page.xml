<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingProfilePage"
    android:background = "@color/white">

    <ImageButton
        android:id="@+id/backButtonForgotPass"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/welcomepage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrowback"/>

    <TextView
        android:id="@+id/buttons_sma"
        android:layout_width="190dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="150dp"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:letterSpacing="-0.04"
        android:lineHeight="52sp"
        android:lineSpacingExtra="7sp"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:textSize="37sp"
        android:translationY="-3.61sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/whatsapp_im"
        android:layout_width="130dp"
        android:layout_height="117dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="134dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person" />

    <TextView
        android:id="@+id/name"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="310dp"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:lineHeight="15sp"
        android:lineSpacingExtra="0sp"
        android:text="Name"
        android:textColor="#151940"
        android:textSize="12sp"
        android:translationY="0.21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameChangeProfile"
        android:layout_width="300dp"
        android:layout_height="48.55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="40dp"
        android:background="#F5F6FA"
        android:backgroundTint="#889DF2"
        android:fontFamily="@font/intermedium"
        android:textColor="@color/black"
        android:textColorHint="#303037"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailAddressText"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="310dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:lineHeight="15sp"
        android:lineSpacingExtra="0sp"
        android:text="Email Address"
        android:textColor="#151940"
        android:textSize="12sp"
        android:translationY="0.21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailChangeProfile"
        android:layout_width="300dp"
        android:layout_height="48.55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="40dp"
        android:background="#F5F6FA"
        android:backgroundTint="#889DF2"
        android:fontFamily="@font/intermedium"
        android:textColor="@color/black"
        android:textColorHint="#303037"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/passText"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="250dp"
        android:fontFamily="@font/inter"
        android:gravity="left"
        android:lineHeight="15sp"
        android:lineSpacingExtra="0sp"
        android:text="Password"
        android:textColor="#151940"
        android:textSize="12sp"
        android:translationY="0.21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passChangeProfile"
        android:layout_width="300dp"
        android:layout_height="48.55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="40dp"
        android:background="#F5F6FA"
        android:fontFamily="@font/intermedium"
        android:textColor="@color/black"
        android:backgroundTint="#889DF2"
        android:textColorHint="#303037"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editProfileBtn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="640dp"
        android:layout_marginEnd="38dp"
        android:backgroundTint="@color/FirstPageColor"
        android:fontFamily="@font/inter"
        android:letterSpacing="-0.01"
        android:lineHeight="20sp"
        android:text="Save Changes"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>