<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationDone"
    android:background="@color/ButtonColor">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="164.45dp"
        android:layout_height="202.12dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="8dp"
        android:alpha=".1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagen" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="164.45dp"
        android:layout_height="202.12dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="120dp"
        android:alpha=".1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagen" />


    <TextView
        android:id="@+id/buttons_sma"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="448dp"
        android:layout_marginEnd="41dp"
        android:fontFamily="@font/inter"
        android:gravity="center|center_vertical"
        android:letterSpacing="-0.03"
        android:lineHeight="52sp"
        android:text="Welcome back!"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:translationY="1.8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="525dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/intermedium"
        android:gravity="center_horizontal|left"
        android:letterSpacing="-0.02"
        android:lineHeight="25sp"
        android:lineSpacingExtra="4sp"
        android:text="It seems everything went well just some information and your app is ready to use"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:translationY="1.75sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextPagVerification"
        android:layout_width="185dp"
        android:layout_height="73dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="95dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter"

        android:letterSpacing="0"
        android:lineHeight="22sp"
        android:text="Get Started"
        android:textColor="@color/ButtonColor"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/illustration5" />

</androidx.constraintlayout.widget.ConstraintLayout>