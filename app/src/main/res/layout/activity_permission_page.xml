<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PermissionPage"
    android:background="@color/white">

    <TextView
        android:id="@+id/buttons_sma"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="200dp"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:letterSpacing="-0.03"
        android:lineHeight="52sp"
        android:lineSpacingExtra="4sp"
        android:text="Permissions"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:translationY="1.8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/body_text"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/intermedium"
        android:gravity="top"
        android:lineHeight="21sp"
        android:lineSpacingExtra="3sp"
        android:text="Please allow us permission to access the following for facial detection and live location."
        android:textColor="@color/black"
        android:textSize="15sp"
        android:translationY="1.46sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/some_id"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person" />

    <CheckBox
        android:id="@+id/checkBoxLocation"
        android:layout_width="300dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="50dp"
        android:background="#C6CCE4"
        android:layoutDirection="rtl"
        android:lineHeight="20sp"
        android:lineSpacingExtra="1sp"
        android:text="Allow access to live location"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:translationY="0.28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/map_pin"
        android:layout_width="24dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="230dp"
        android:clipToOutline="true"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxLocation"
        app:layout_constraintStart_toStartOf="@+id/checkBoxLocation"
        app:layout_constraintTop_toTopOf="@+id/checkBoxLocation"
        app:srcCompat="@drawable/maplogo" />

    <CheckBox
        android:id="@+id/checkBoxCamera"
        android:layout_width="300dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="50dp"
        android:background="#C6CCE4"
        android:gravity="center_vertical|center"
        android:layoutDirection="rtl"
        android:text="Allow to access camera"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:translationY="0.30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="24dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="250dp"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxCamera"
        app:layout_constraintStart_toStartOf="@+id/checkBoxCamera"
        app:layout_constraintTop_toTopOf="@+id/checkBoxCamera"
        app:srcCompat="@drawable/camera" />

    <CheckBox
        android:id="@+id/checkBoxContacts"
        android:layout_width="300dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="50dp"
        android:background="#C6CCE4"
        android:gravity="right|center"
        android:layoutDirection="rtl"
        android:lineHeight="20sp"
        android:lineSpacingExtra="1sp"
        android:text="Allow to access to contacts"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:translationY="0.28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="230dp"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxContacts"
        app:layout_constraintStart_toStartOf="@+id/checkBoxContacts"
        app:layout_constraintTop_toTopOf="@+id/checkBoxContacts"
        app:srcCompat="@drawable/users" />

    <CheckBox
        android:id="@+id/policyBox"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/intermedium"
        android:letterSpacing="-0.02"
        android:text="Iâ€™ve read and agree to the terms of privacy policy"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonContinuePermission"
        android:layout_width="332dp"
        android:layout_height="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="22dp"
        android:backgroundTint="@color/FirstPageColor"
        android:fontFamily="@font/inter"
        android:letterSpacing="-0.02"
        android:text="Continue"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>